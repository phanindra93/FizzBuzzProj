@model X.PagedList.IPagedList<string>

@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Web.Common

<h2>Fizz-Buzz Result</h2>

<ul>
    @foreach (var item in Model)
    {
        <li>
            @if (item == "fizz")
            {
                <span style="color: blue;">@item</span>
            }
            else if (item == "buzz")
            {
                <span style="color: green;">@item</span>
            }
            else
            {
                @item
            }
        </li>
    }
</ul>

<div class="pagination">
    @if (Model.PageCount >= 1)
    {
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li><a href="@Url.Action("Index2", new { page = Model.PageNumber - 1,number = Model.TotalItemCount   })" class="pagination-button">Previous</a></li>
            }

            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="@(i == Model.PageNumber ? "active" : "")">
                    <a href="@Url.Action("Index2", new { page = i, number = Model.TotalItemCount })" class="pagination-button">@i</a>
                    <span>   </span>
                </li>
            }


            @if (Model.HasNextPage)
            {
                <li><a href="@Url.Action("Index2", new { page = Model.PageNumber + 1,number = Model.TotalItemCount  })" class="pagination-button">Next</a></li>
            }
        </ul>
    }
</div>